<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="alejosd5.tumblr.com.sd.MainActivity">

    <TextView
        android:text="Alejandro Sierra Duran"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alejotext"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/find_users"
        android:id="@+id/userButton"
        android:layout_below="@+id/alejotext"
        android:layout_alignRight="@+id/alejotext"
        android:layout_alignEnd="@+id/alejotext"
        android:layout_marginTop="131dp"
        android:onClick="sendMessage" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginBottom="63dp"
        android:layout_alignBottom="@+id/userButton"
        android:layout_alignLeft="@+id/userButton"
        android:layout_alignStart="@+id/userButton"
        android:layout_alignRight="@+id/userButton"
        android:layout_alignEnd="@+id/userButton" />


</RelativeLayout>
